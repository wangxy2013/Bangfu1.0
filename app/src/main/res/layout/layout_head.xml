<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_head"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:padding="@dimen/dm_5"
    >

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dm_8"
        android:src="@drawable/ic_back"
        />
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_3"
        android:layout_toRightOf="@+id/iv_back"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dm_8"
        android:textColor="@color/white"
        android:textSize="@dimen/t18"
        />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm_10"
        android:textColor="@color/white"
        android:textSize="@dimen/t12"
        />


</RelativeLayout>