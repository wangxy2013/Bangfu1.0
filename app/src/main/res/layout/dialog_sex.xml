<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_white_bg"
              android:orientation="vertical"
              android:padding="@dimen/dm_20"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="选择性别"
        android:textColor="@color/redA"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_15"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_man"
            android:layout_width="@dimen/dm_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_weight="1"
            android:background="@drawable/sex_man_frame"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dm_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sex_man"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:text="男"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_women"
            android:layout_width="@dimen/dm_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_weight="1"
            android:background="@drawable/sex_women_frame"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dm_13">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sex_woman"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:text="女"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>